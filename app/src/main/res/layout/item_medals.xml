<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_grade_selected_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/secondaryText">

    <TextView
        android:id="@+id/textView_medal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rubik"
        android:maxWidth="300dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Grande Progresso"
        android:textAlignment="center"
        android:singleLine="true"
        android:textColor="@color/thirdText"
        android:textSize="@dimen/font_xxlarge"
        app:layout_constraintEnd_toStartOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_medal_descritption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rubik_lightitalic"
        android:letterSpacing="0.04"
        android:maxWidth="300dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:text="Esta medalha é adquirida quando voce completa mais de três questionarios, vamos la que voce consegue!"
        android:textAlignment="center"
        android:textColor="@color/thirdText"
        android:textSize="@dimen/font_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_medal_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_badge"
        app:tint="@color/baseBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>

