<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_grade_selected_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:background="@drawable/rouded_corners_boardered">

    <TextView
        android:id="@+id/textView_question_result_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rubik"
        android:maxWidth="300dp"
        android:maxLines="3"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xxlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec mattis nisl lectus, eu varius leo tempor quis. Fusce massa metus, congue eu purus in, finibus vulputate lacus." />

    <View
        android:id="@+id/view_line_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:background="@color/primaryTextHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_question_result_title" />

    <TextView
        android:id="@+id/textView_question_result_grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rubik_lightitalic"
        android:letterSpacing="0.04"
        android:maxWidth="280dp"
        android:paddingStart="5dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_question_result_descritption"
        app:layout_constraintTop_toBottomOf="@id/view_line_divider"
        tools:text="Desenvolvimento de interfaces web para computadores super maneiros" />

    <TextView
        android:id="@+id/textView_question_result_descritption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/rubik_medium"
        android:text="MatÃ©ria:"
        android:textAlignment="textStart"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_large"
        app:layout_constraintBottom_toBottomOf="@id/textView_question_result_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_question_result_grade" />

</androidx.constraintlayout.widget.ConstraintLayout>

