<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_results_header"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_topbar_notch"
        android:background="@color/colorSecondary"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_grade_headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Resultados"
            android:textAlignment="center"
            android:textColor="@color/baseBackground"
            android:textSize="@dimen/font_xxlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_results_stars"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_topbar_notch"
        android:layout_marginTop="24dp"
        android:background="@color/baseBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_results_header">

        <ImageView
            android:id="@+id/imageView_star_1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView_star_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star"
            app:tint="@color/colorSecondary" />

        <ImageView
            android:id="@+id/imageView_star_2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView_star_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView_star_1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star"
            app:tint="@color/colorSecondary" />

        <ImageView
            android:id="@+id/imageView_star_3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView_star_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView_star_2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star"
            app:tint="@color/colorSecondary" />

        <ImageView
            android:id="@+id/imageView_star_4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView_star_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView_star_3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star"
            app:tint="@color/colorSecondary" />

        <ImageView
            android:id="@+id/imageView_star_5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_star_4"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star"
            app:tint="@color/colorSecondary" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_results_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/rubik_medium"
        android:maxWidth="350dp"
        android:text="Uhuuuul! Parabens!."
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xxxlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_results_stars" />

    <TextView
        android:id="@+id/textView_results_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/rubik_medium"
        android:maxWidth="350dp"
        android:text="Uhuuuul! Parabens!."
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_results_title" />

    <TextView
        android:id="@+id/textView_results_quiztype_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/rubik_medium"
        android:maxWidth="350dp"
        android:text="Matéria:"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xxlarge"
        app:layout_constraintBottom_toTopOf="@+id/textView_results_quiztype"
        app:layout_constraintEnd_toStartOf="@+id/textView_results_quizpoints_header"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_results_quiztype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/rubik_medium"
        android:maxWidth="350dp"
        android:text="AEDS I"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xlarge"
        app:layout_constraintBottom_toTopOf="@+id/materialButton_go_back"
        app:layout_constraintEnd_toEndOf="@+id/textView_results_quiztype_header"
        app:layout_constraintStart_toStartOf="@+id/textView_results_quiztype_header" />

    <TextView
        android:id="@+id/textView_results_quizpoints_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/rubik_medium"
        android:maxWidth="350dp"
        android:text="Pontuação:"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xxlarge"
        app:layout_constraintBottom_toTopOf="@+id/textView_results_quizpoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_results_quiztype_header" />


    <TextView
        android:id="@+id/textView_results_quizpoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/rubik_medium"
        android:maxWidth="350dp"
        android:text="200"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_xlarge"
        app:layout_constraintBottom_toTopOf="@+id/materialButton_go_back"
        app:layout_constraintEnd_toEndOf="@+id/textView_results_quizpoints_header"
        app:layout_constraintStart_toStartOf="@+id/textView_results_quizpoints_header" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton_go_back"
        style="@style/PucQuizNormalButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="Concluir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>