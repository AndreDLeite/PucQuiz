<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="PucQuizButtonBottom" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/font_default</item>
    </style>

    <style name="PucQuizNormalButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <!--        <item name="android:insetTop">0dp</item>-->
        <!--        <item name="android:insetBottom">0dp</item>-->
        <!--        <item name="android:letterSpacing">0</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">5dp</item>

    </style>
</resources>
